<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ChooseSeatFragment"
    android:background="@color/white">
   <Toolbar
       android:id="@+id/toolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       android:layout_alignParentTop="true"
       android:contentInsetStart="0dp"
       android:background="@color/white"
       android:paddingStart="0dp">
       <TextView
           android:id="@+id/txtGoBack"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:paddingHorizontal="5dp"
           app:backgroundTint="@null"
           android:drawableLeft="@drawable/ic_go_back"
           android:drawablePadding="-2dp"
           android:gravity="center_vertical"
           android:text="Quay lại"
           android:textColor="#505050"
           android:textSize="18dp"
           android:textStyle="bold"/>
   </Toolbar>
    <LinearLayout
        android:id="@+id/lnlTheater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:layout_below="@id/toolbar"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/txtTheaterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rạp Linh Trung, Thủ Đức"
            android:textSize="20dp"
            android:textColor="@color/app_primary"
            android:fontFamily="sans-serif-black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text="Phòng 2, "/>
            <TextView
                android:id="@+id/txtTimeFrame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khung giờ: 17:00 - 18:20"
                android:paddingHorizontal="2dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bgd_group_line_shadow"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scViewSeats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lnlTheater"
        android:layout_above="@+id/tbLayoutSeatClasses">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="18dp"
            android:paddingVertical="35dp">
            <LinearLayout
                android:id="@+id/lnlSeatRowName"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="L"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="K"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="J"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="I"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="H"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="G"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="F"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="E"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="D"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="C"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="B"/>
                <TextView
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:textAlignment="center"
                    android:text="A"/>
            </LinearLayout>
            <GridLayout
                android:id="@+id/gdlSeats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="14">
                <Space
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:src="@drawable/ic_chair"/>

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="5"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="6"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="7"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="8"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="10"
                    android:src="@drawable/ic_chair"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="11"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="3"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="3"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="13"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="0"
                    android:layout_column="14"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="1"
                    android:layout_column="13"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="1"
                    android:layout_column="14"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="13"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="14"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="13"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="14"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_sold"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="4"
                    android:layout_column="13"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="4"
                    android:layout_column="14"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_selected" />
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="10"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="11"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="10"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="11"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="9"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="2"
                    android:layout_column="8"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="9"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_row="3"
                    android:layout_column="8"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
            </GridLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/vScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgd_screen"
            android:layout_above="@id/tbLayoutSeatClasses"
            android:text="MÀN HÌNH"
            android:textSize="12sp"
            android:textColor="#373757"
            android:textAlignment="center"
            android:paddingVertical="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </ScrollView>
    <TableLayout
        android:id="@+id/tbLayoutSeatClasses"
        android:background="#f9f9f9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="12dp"
        android:stretchColumns="*"
        android:layout_above="@id/vMovieLine">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="5dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingEnd="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_sold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Đã bán"
                    android:paddingStart="10dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingStart="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_selected"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Đã chọn"
                    android:paddingStart="8dp"
                    android:gravity="center"/>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_vip"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ghế VIP"
                    android:paddingStart="10dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_couple"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ghế đôi"
                    android:paddingStart="10dp"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_chair"
                    app:tint="@color/seat_standard"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Ghế thường"
                    android:paddingStart="10dp"
                    android:gravity="center"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <View
        android:id="@+id/vMovieLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingHorizontal="2dp"
        android:background="@drawable/bgd_group_line_shadow"
        android:layout_above="@id/lnlMovieInfo"/>
    <LinearLayout
        android:id="@+id/lnlMovieInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/txtMovieName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên phim"
            android:textSize="18dp"
            android:textColor="@color/app_primary"
            android:fontFamily="sans-serif-black"
            android:paddingVertical="1dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="2dp"
                android:text="Ghế"/>
            <TextView
                android:id="@+id/txtSeatSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-medium"
                android:text="K8, K9"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:fontFamily="sans-serif-black"
                android:text="Tổng tiền"/>
            <TextView
                android:id="@+id/txtTotalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18dp"
                android:fontFamily="sans-serif-black"
                android:text="0"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_btn_accept"
            app:backgroundTint="@null"
            android:layout_marginTop="5dp"
            android:text=" Hoàn tất thanh toán (1/3)"/>
    </LinearLayout>
</RelativeLayout>