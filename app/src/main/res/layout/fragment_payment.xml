<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.PaymentFragment"
    android:background="#f3f5f5">
    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:contentInsetStart="0dp"
        android:background="@color/white"
        android:paddingStart="0dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/txtGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null"
            android:drawableLeft="@drawable/ic_go_back"
            android:drawablePadding="-2dp"
            android:gravity="center_vertical"
            android:text="Quay lại"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </Toolbar>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nesScrollContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_below="@id/toolBar"
        android:layout_above="@id/vMovieLine">
        <LinearLayout
            android:id="@+id/lnlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/lnlMovieInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:layout_marginTop="5dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:id="@+id/imgMovieImage"
                        android:layout_width="80dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/mv_bi_kip_luyen_rong"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="6dp">
                    <TextView
                        android:id="@+id/txtMovieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bí kíp luyện rồng"
                        android:textSize="17sp"
                        android:maxLines="3"
                        android:textColor="@color/app_primary"
                        android:fontFamily="sans-serif-medium"
                        android:paddingVertical="2dp"/>
                    <TextView
                        android:id="@+id/txtTheaterAddressDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="1dp"
                        android:drawablePadding="3dp"
                        android:paddingHorizontal="2dp"
                        android:drawableLeft="@drawable/ic_location_mini"
                        android:text="Rạp Linh Trung, Thủ Đức - Phòng 2"/>
                    <TextView
                        android:id="@+id/txtMovieShowtime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:paddingHorizontal="2dp"
                        android:drawableLeft="@drawable/ic_calendar_mini"
                        android:text="17:30 - Hôm nay, 14/04/2025"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlBillInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin đơn hàng"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:textColor="@color/app_primary"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bgd_group_line_shadow"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="2dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcViewOrderItems"
                    android:layout_width="match_parent"
                    android:layout_height="220dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="6dp"
                    android:paddingBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textColor="@color/app_accent_text"
                        android:fontFamily="sans-serif-medium"
                        android:text="Thành tiền:"
                        android:textAlignment="textEnd"/>
                    <TextView
                        android:id="@+id/txtTotalCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:textSize="16sp"
                        android:textColor="@color/app_accent_text"
                        android:fontFamily="sans-serif-medium"
                        android:text="110.000đ"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:paddingHorizontal="15dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phương thức thanh toán"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:textColor="@color/app_primary"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/bgd_group_line_shadow"
                    android:layout_marginTop="1dp"
                    android:layout_marginHorizontal="1dp"
                    android:layout_marginBottom="2dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcViewPayMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <View
        android:id="@+id/vMovieLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="1dp"
        android:paddingHorizontal="2dp"
        android:background="@drawable/bgd_group_line_shadow"
        android:layout_above="@id/lnlPaymentInfo"/>
    <LinearLayout
        android:id="@+id/lnlPaymentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="15dp"
        android:paddingBottom="20dp"
        android:paddingTop="8dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:translationZ="6dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/app_primary"
                android:fontFamily="sans-serif-black"
                android:text="Tổng tiền"/>
            <TextView
                android:id="@+id/txtFinalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-black"
                android:text="0 đ"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_btn_accept"
            app:backgroundTint="@null"
            android:layout_marginTop="5dp"
            android:text=" Hoàn tất thanh toán (3/3)"/>
    </LinearLayout>
</RelativeLayout>