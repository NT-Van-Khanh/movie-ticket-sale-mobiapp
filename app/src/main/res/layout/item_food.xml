<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="225dp"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="2dp"

    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/imgFoodImage"
            android:layout_width="150dp"
            android:layout_height="165dp"
            android:scaleType="fitXY"
            android:src="@drawable/fd_cb_popcorn1"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/txtFoodTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bỏng ngô"
        android:textSize="16dp"
        android:textColor="@color/theme_primary"
        android:maxLines="1"
        android:paddingHorizontal="2dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp">
        <TextView
            android:id="@+id/txtFoodPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="52.000đ"
            android:paddingHorizontal="2dp"
            android:textSize="16dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/theme_tertiary"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/btnRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:background="@null"/>
        <EditText
            android:id="@+id/edtQuantity"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="2"
            android:background="@null"
            android:text="1"
            android:textSize="16dp"
            android:textColor="@color/theme_tertiary"
            android:inputType="number"
            android:layout_toEndOf="@id/btnRemove"/>
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:background="@null"
            android:layout_toEndOf="@id/edtQuantity"/>
    </RelativeLayout>
</LinearLayout>