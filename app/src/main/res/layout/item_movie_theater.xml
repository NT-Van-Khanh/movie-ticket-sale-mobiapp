<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgd_item_theater"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="2dp"
    android:paddingVertical="5dp"
    android:layout_marginVertical="2dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="16">
        <ImageView
            android:id="@+id/imgMovieTheaterImage"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:src="@drawable/cinema2"
            android:scaleType="fitXY"
            android:padding="3dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txtMovieTheaterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rạp Linh Trung, Thủ Đức"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toEndOf="@id/imgMovieTheaterImage"
            android:paddingStart="6dp" />

        <TextView
            android:id="@+id/txtMovieTheaterAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rạp Linh Trung, Thủ Đức "
            android:textSize="15sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_toEndOf="@id/imgMovieTheaterImage"
            android:layout_below="@id/txtMovieTheaterName"
            android:paddingStart="4dp"
            app:drawableStartCompat="@drawable/ic_location_2"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_go_forward"
        android:paddingEnd="5dp"
        app:tint="#64677C" />
</LinearLayout>