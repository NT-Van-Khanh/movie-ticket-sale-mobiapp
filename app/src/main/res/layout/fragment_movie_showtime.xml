<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MovieShowtimeFragment">
    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:contentInsetStart="0dp"
        android:background="@color/white"
        android:paddingStart="0dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/txtGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null"
            android:drawableLeft="@drawable/ic_go_back"
            android:drawablePadding="-2dp"
            android:gravity="center_vertical"
            android:text="Quay lại"
            android:textColor="#505050"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </Toolbar>
    <LinearLayout
        android:id="@+id/lnlMovieInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="3dp"
        android:background="@color/white"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="2dp">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
            <ImageView
                android:id="@+id/imgMovieImage"
                android:layout_width="60dp"
                android:layout_height="78dp"
                android:scaleType="fitXY"
                android:src="@drawable/mv_bi_kip_luyen_rong"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp">
            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bí kíp luyện rồng"
                android:textSize="17sp"
                android:maxLines="2"
                android:textColor="@color/app_primary"
                android:fontFamily="sans-serif-medium"
                android:paddingVertical="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:contentDescription="rating"
                android:paddingHorizontal="2dp">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_time" />
                    <TextView
                        android:id="@+id/txtMovieDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 phút"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txtMovieRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9.5"
                        android:textColor="@android:color/black"
                        android:paddingHorizontal="3dp"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_star"/>
                    <Space
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/txtMovieAge"
                        android:layout_width="38dp"
                        android:layout_height="29dp"
                        android:layout_marginStart="5dp"
                        android:text="T13"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:paddingVertical="3dp"
                        android:paddingHorizontal="6dp"
                        android:background="@drawable/bgd_movie_age"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewDates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:layout_marginBottom="2dp"
        android:paddingHorizontal="5dp"
        android:layout_marginVertical="2dp">
    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcViewTheatersByMovie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"/>
        <ProgressBar
            android:id="@+id/pbLoadShowtimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>