<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F6F8FA">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:textColor="#474D61"
            android:textSize="20sp"
            android:fontFamily="sans-serif-medium"/>
    </Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:paddingBottom="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/logo"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Xin chào!"
                    android:textAlignment="center"
                    android:textColor="#1E2E3D"
                    android:fontFamily="sans-serif-black"
                    android:textSize="18sp"
                    android:layout_marginTop="2dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingVertical="1dp"
                    android:layout_marginTop="12dp">
                    <Button
                        android:id="@+id/btnRedirectLogin"
                        android:layout_width="130dp"
                        android:layout_height="42dp"
                        android:text="Đăng nhập"
                        app:backgroundTint="@null"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/bgd_btn_login"
                        android:layout_marginEnd="15dp"
                        android:paddingHorizontal="0dp"/>

                    <Button
                        android:id="@+id/btnRedirectRegister"
                        android:layout_width="120dp"
                        android:layout_height="42dp"
                        android:background="@drawable/bgd_btn_another_login"
                        android:paddingHorizontal="0dp"
                        android:text="Đăng ký"
                        android:textColor="#FFD301"
                        android:textSize="16sp"
                        app:backgroundTint="@null" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingHorizontal="22dp"
                    android:paddingVertical="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_account"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/txtUserFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nguyễn Bình Quốc An"
                                android:fontFamily="sans-serif-medium"
                                android:textSize="18sp"
                                android:textAlignment="center"
                                android:textColor="@color/app_primary"
                                android:paddingVertical="6dp"/>
                           </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:maxLines="2"
                        android:text="Email: nbq***123@gmail.com"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại: 09******83"
                        android:maxLines="1"
                        android:paddingVertical="2dp"
                        android:textAlignment="center"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal"

                        android:background="@drawable/line_dashed_divider"

                        android:layout_marginVertical="6dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:drawableLeft="@drawable/ic_logout"
                        android:text="Đăng xuất"
                        android:layout_gravity="end"
                        android:paddingVertical="0dp"
                        android:paddingHorizontal="16dp"
                        android:textColor="#545D79"
                        app:backgroundTint="@null"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/bgd_btn_showmore"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcViewSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@color/white"
                    android:overScrollMode="never"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcViewContacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:overScrollMode="never"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>