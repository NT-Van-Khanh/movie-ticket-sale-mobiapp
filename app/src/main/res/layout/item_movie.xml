<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="240dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp">
            <ImageView
                android:id="@+id/imgMovieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/dtmv_captainamerica"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMovieTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="2dp"
                android:text="Movie title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:contentDescription="rating">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_time" />
                <TextView
                    android:id="@+id/txtMovieDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 phÃºt"
                    android:textSize="13sp"
                    android:layout_marginStart="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:paddingEnd="2dp">
<!--                <TextView-->
                <!--                    android:id="@+id/txtMovieRating"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="9.5"-->
                <!--                    android:paddingHorizontal="2dp"/>-->
                <!--                <ImageView-->
                <!--                    android:layout_width="18dp"-->
                <!--                    android:layout_height="18dp"-->
                <!--                    android:src="@drawable/ic_star"/>-->
                <TextView
                    android:id="@+id/txtMovieAge"
                    android:layout_width="35dp"
                    android:layout_height="27dp"
                    android:layout_marginStart="5dp"
                    android:text="T13"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/bgd_movie_age"
                    android:gravity="center"/>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>

