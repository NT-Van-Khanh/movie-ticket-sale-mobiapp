<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/txtItemQuantity"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:text="x10"
            android:textColor="@color/app_primary"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingStart="0dp"/>
        <TextView
            android:id="@+id/txtItemTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Vé 2D VIP - K8 K9 K10"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/txtItemQuantity"
            android:layout_toStartOf="@id/txtItemPrice"/>
        <TextView
            android:id="@+id/txtItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="180.000 đ"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:fontFamily="sans-serif-medium"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_dashed_divider"/>
</LinearLayout>