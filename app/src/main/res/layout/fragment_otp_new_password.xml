<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.OtpNewPasswordFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:contentInsetStart="0dp"
            android:paddingStart="0dp">
            <TextView
                android:id="@+id/txtGoBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                app:backgroundTint="@null"
                android:drawableLeft="@drawable/ic_go_back"
                android:drawablePadding="-2dp"
                android:gravity="center_vertical"
                android:text="Quay lại"
                android:textColor="@color/theme_tertiary"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </Toolbar>
        <ImageView
            android:id="@+id/imgLoginImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="20dp"
            android:src="@drawable/ic_send_email" />

        <TextView
            android:id="@+id/txtLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác thực địa chỉ email"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="@color/theme_primary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúng tôi đã gửi mã xác thực qua email mà bạn đã đăng ký. \nVui lòng nhập mã xác thực để tiếp tục."
            android:textSize="15dp"
            android:textAlignment="center"
            android:paddingHorizontal="30dp"
            android:paddingTop="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="Nhập mã xác thực"
            android:textAlignment="center"
            android:textColor="@color/theme_primary"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="6dp"
            android:gravity="center">
            <EditText
                android:id="@+id/edtNum1"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/bgd_edt_otp"
                android:fontFamily="sans-serif-black"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/theme_on_otp"
                android:textSize="22dp" />
            <EditText
                android:id="@+id/edtNum2"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:textAlignment="center"
                android:hint="0"
                android:textSize="22dp"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bgd_edt_otp"
                android:textColor="@color/theme_on_otp"/>
            <EditText
                android:id="@+id/edtNum3"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:textAlignment="center"
                android:hint="0"
                android:textSize="22dp"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bgd_edt_otp"
                android:textColor="@color/theme_on_otp"/>
            <EditText
                android:id="@+id/edtNum4"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:textAlignment="center"
                android:hint="0"
                android:textSize="22dp"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bgd_edt_otp"
                android:textColor="@color/theme_on_otp"/>
            <EditText
                android:id="@+id/edtNum5"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:textAlignment="center"
                android:hint="0"
                android:textSize="22dp"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bgd_edt_otp"
                android:textColor="@color/theme_on_otp"/>
            <EditText
                android:id="@+id/edtNum6"
                android:layout_width="38dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="2dp"
                android:textAlignment="center"
                android:hint="0"
                android:textSize="22dp"
                android:maxLength="1"
                android:inputType="number"
                android:singleLine="true"
                android:fontFamily="sans-serif-black"
                android:background="@drawable/bgd_edt_otp"
                android:textColor="@color/theme_on_otp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian còn lại "
                android:textColor="@color/theme_inverse_on_surface"
                android:textSize="17dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/txtTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(120s)"
                android:textColor="@color/theme_inverse_on_surface"
                android:textSize="17dp"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnSendOtpAgain"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            app:backgroundTint="@null"
            android:textColor="@color/theme_tertiary"
            android:paddingHorizontal="20dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:textSize="16dp"
            android:background="@drawable/bgd_btn_another_login"
            android:text="Gửi lại mã"
            android:enabled="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập mật khẩu mới"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/theme_on_surface_variant"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"/>
        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Tối thiểu 8 ký tự, bao gồm chữ và số"
            android:drawableLeft="@drawable/ic_lock_ol"
            android:drawableRight="@drawable/ic_visibility_off"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxLength="50"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bgd_edt_login"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="2dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Nhập lại mật khẩu mới"
            android:textAlignment="center"
            android:textColor="@color/theme_on_surface_variant"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtConfirmNewPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập lại mật khẩu"
            android:drawableLeft="@drawable/ic_lock_ol"
            android:drawableRight="@drawable/ic_visibility_off"
            android:inputType="textPassword"
            android:singleLine="true"
            android:maxLength="50"
            android:drawablePadding="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bgd_edt_login"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="17sp"
            android:textColor="@color/theme_on_secondary"
            android:fontFamily="sans-serif-black"
            app:backgroundTint="@null"
            android:background="@drawable/bgd_btn_login"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="50dp"
            android:text="XÁC NHẬN"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pbLoadVerifyOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:visibility="gone" />
    <View
        android:id="@+id/viewOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/theme_loading"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"/>
</RelativeLayout>