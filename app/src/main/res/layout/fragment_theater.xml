<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.TheaterFragment">
    <Toolbar
        android:id="@+id/tbrMovieTheater"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Rạp phim"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/theme_tertiary"/>
    </Toolbar>
    <RelativeLayout
        android:id="@+id/lnlAddressFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="8dp"
        android:layout_below="@id/tbrMovieTheater">
        <Button
            android:id="@+id/btnChooseProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:backgroundTint="@color/theme_primary_container"
            android:drawableLeft="@drawable/ic_location"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp"
            android:text="Chọn tỉnh thành"
            android:textColor="@color/theme_on_primary_container"
            android:textSize="16.5sp"
            android:layout_toStartOf="@id/btnFindNearlyTheater"/>
        <Button
            android:id="@+id/btnFindNearlyTheater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_my_location"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:drawablePadding="0dp"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="Gần nhất"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcViewMovieTheaters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/lnlAddressFilter">
    </androidx.recyclerview.widget.RecyclerView>
    <ProgressBar
        android:id="@+id/pbLoadTheaters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <View
        android:id="@+id/viewOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_loading"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"/>
</RelativeLayout>