<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PhoneOTPAuthFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:contentInsetStart="0dp"
        android:paddingStart="0dp">
        <TextView
            android:id="@+id/txtGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            app:backgroundTint="@null"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_go_back"
            android:drawablePadding="-2dp"
            android:gravity="center_vertical"
            android:text="Quay lại"
            android:textColor="#505050"
            android:textSize="18dp"
            android:textStyle="bold"/>
    </Toolbar>


    <ImageView
        android:id="@+id/imgLoginImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_phone_otp_type"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        android:paddingStart="20dp"/>
    <TextView
        android:id="@+id/txtLoginTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác thực số điện thoại"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#1E2E3D"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chúng tôi đã gửi mã xác thực qua số điện thoại mà bạn đã đăng ký. \nVui lòng nhập mã xác thực để tiếp tục."
        android:textSize="16dp"
        android:textAlignment="center"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã xác thực"

        android:textColor="#36495B"
        android:textSize="20dp"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        android:paddingTop="35dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="18dp"
        android:gravity="center">
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>
        <EditText
            android:layout_width="36dp"
            android:layout_height="46dp"
            android:layout_marginHorizontal="2dp"
            android:textAlignment="center"
            android:maxLines="1"
            android:maxLength="1"
            android:inputType="number"
            android:hint="0"
            android:textSize="22dp"
            android:fontFamily="sans-serif-black"
            android:background="@drawable/bgd_edt_otp"
            android:textColor="@color/app_otp_text"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textSize="17sp"
        android:textColor="#F7F9FA"
        android:fontFamily="sans-serif-black"
        app:backgroundTint="@null"
        android:background="@drawable/bgd_btn_login"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:text="TIẾP TỤC"/>
</LinearLayout>